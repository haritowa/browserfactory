{
    "name": "Browser Factory Dev Environment",
    "dockerComposeFile": [
        "../docker-compose.dev.yml"
    ],
    "service": "workspace",
    "workspaceFolder": "/workspaces/browserfactory",
    "customizations": {
        "vscode": {
            "extensions": [
                "denoland.vscode-deno",
                "ms-azuretools.vscode-docker",
                "p1c2u.docker-compose",
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss"
            ],
            "settings": {
                "deno.enable": true,
                "deno.lint": true,
                "deno.unstable": [],
                "deno.suggest.imports.hosts": {
                    "https://deno.land": true,
                    "https://cdn.skypack.dev": true,
                    "https://x.nest.land": true
                },
                "deno.config": "./deno.json",
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "vscode.typescript-language-features",
                "[typescript]": {
                    "editor.defaultFormatter": null
                },
                "[typescriptreact]": {
                    "editor.defaultFormatter": null
                },
                "[json]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.exclude": {
                    "**/.git": true,
                    "**/node_modules": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true
                }
            }
        }
    },
    "forwardPorts": [
        3000,
        6379,
        8080
    ],
    "postCreateCommand": "deno --version && redis-cli --version && echo 'Syncing shared configuration...' && deno task sync-config && echo 'Dev container setup complete!'",
    "postStartCommand": "git config --global commit.gpgsign false && git config --global --unset gpg.ssh.program 2>/dev/null || true && git config --global --unset user.signingkey 2>/dev/null || true && echo 'Git configured for container environment'",
    "remoteUser": "root",
    "shutdownAction": "stopCompose",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/browserfactory,type=bind,consistency=cached"
    ],
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true",
            "moby": "true"
        }
    },
    "remoteEnv": {
        "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}"
    }
}