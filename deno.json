{
    "lock": false,
    "tasks": {
        "check": "deno fmt --check && deno lint && deno check apps/**/*.ts libs/**/*.ts",
        "lint": "deno lint",
        "format": "deno fmt",
        "format:check": "deno fmt --check",
        "test": "deno test --allow-env --allow-net --allow-read"
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        },
        "exclude": [
            "_fresh/",
            "node_modules/",
            "apps/*/node_modules/",
            "apps/*/_fresh/"
        ]
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "proseWrap": "preserve",
        "exclude": [
            "_fresh/",
            "node_modules/",
            "apps/*/node_modules/",
            "apps/*/_fresh/"
        ]
    },
    "imports": {
        "$std/": "https://deno.land/std@0.208.0/"
    },
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2022",
            "deno.ns"
        ],
        "strict": true
    }
}
